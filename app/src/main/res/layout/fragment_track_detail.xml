<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.parallelmusic.ui.TrackDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_dark">

        <ImageView
            android:id="@+id/trackDetailImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorTextIcons">

            <TextView
                android:id="@+id/trackNameDetailtextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="26dp"
                android:text="Track Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trackArtistDetailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/trackNameDetailtextView"
                android:layout_alignStart="@+id/trackNameDetailtextView"
                android:layout_below="@+id/trackNameDetailtextView"
                android:layout_marginTop="16dp"
                android:text="Artist"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/listenerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/trackArtistDetailTextView"
                android:layout_alignStart="@+id/trackArtistDetailTextView"
                android:layout_below="@+id/trackArtistDetailTextView"
                android:layout_marginTop="21dp"
                android:text="1480140-525"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/listenerTextView"
                android:layout_alignStart="@+id/listenerTextView"
                android:layout_below="@+id/listenerTextView"
                android:layout_marginTop="25dp"
                android:text="TextView" />

        </RelativeLayout>


    </LinearLayout>

</FrameLayout>
